{
  "name": "daodaolint",
  "displayName": "DaoDaoLint",
  "description": "a code lint",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:daodaolint.helloWorld"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "title": "DaoDaoLint",
      "properties": {
        "vscodePluginDemo.yourName": {
          "type": "string",
          "default": "guest",
          "description": "DaoDaoLee"
        },
        "vscodePluginDemo.showTip": {
          "type": "boolean",
          "default": true,
          "description": "是否在每次启动时显示欢迎提示！"
        }
      }
    },
    "commands": [
      {
        "command": "daodaolint.helloWorld",
        "title": "DaoDaoLint"
      },
      {
        "command": "daodaolint.helloWorld.getCurrentFilePath",
        "title": "DaoDaoTest"
      }
    ],
    "keybindings": [
      {
        "command": "daodaolint.helloWorld",
        "key": "ctrl+f10",
        "mac": "cmd+f10",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "daodaolint.helloWorld",
          "when": "editorLangId == javascript"
        },
        {
          "command": "daodaolint.helloWorld.getCurrentFilePath",
          "when": "editorLangId == javascript"
        }
      ],
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "daodaolint.helloWorld",
          "group": "navigation@1"
        },
        {
          "when": "editorFocus",
          "command": "daodaolint.helloWorld.getCurrentFilePath",
          "group": "navigation@2"
        }
      ],
      "explorer/context": [
        {
          "command": "daodaolint.helloWorld.getCurrentFilePath",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.65.0",
    "@vscode/test-electron": "^2.1.2",
    "babel-loader": "^8.2.3",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "typescript": "^4.5.5"
  }
}
